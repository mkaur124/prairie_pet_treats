<h1>Your Shopping Cart</h1>

<% if @cart_items.empty? %>
  <p>Your cart is empty.</p>
<% else %>

  <!-- UPDATE CART FORM -->
  <%= form_with url: cart_update_path, method: :post, local: true, data: { turbo: false } do %>
    <table>
      <thead>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Remove</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |item| %>
          <tr>
            <td><%= item[:product].name %></td>

            <!-- QUANTITY FIELD -->
            <td>
              <%= number_field_tag "quantities[#{item[:product].id}]", item[:quantity], min: 0 %>
            </td>

            <!-- LINE PRICE -->
            <td><%= number_to_currency(item[:product].price * item[:quantity]) %></td>

            <!-- REMOVE BUTTON â€” FIXED (NO nested form) -->
            <td>
              <%= link_to "Remove",
                    cart_remove_path(product_id: item[:product].id),
                    method: :delete,
                    data: { turbo: false },
                    class: "inline-remove-btn" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <p><strong>Total:</strong>
      <%= number_to_currency(@cart_items.sum { |item| item[:product].price * item[:quantity] }) %>
    </p>

    <%= submit_tag "Update Cart" %>
  <% end %>

  <!-- LINKS -->
  <%= link_to "Continue Shopping", products_path %>
  <%= link_to "Proceed to Checkout", new_checkout_path,
        class: "btn btn-primary", style: "margin-left: 10px;" %>

<% end %>
