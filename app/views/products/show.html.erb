<div class="container my-5">
  <!-- Breadcrumbs -->
  <%= breadcrumbs(["Home", root_path], ["All Products", products_path], [@product.name, product_path(@product)]) %>

  <h2 class="mb-3" style="color: #ff8c69;"><%= @product.name %></h2>

<% if @product.image.attached? %>
  <%= image_tag url_for(@product.image.variant(resize_to_limit: [300, 300])), class: "img-fluid mb-3", style: "object-fit: cover;" %>
<% end %>

  <p class="fs-5"><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>

  <% if @product.description.present? %>
    <p class="mt-3"><strong>Description:</strong> <%= @product.description %></p>
  <% else %>
    <p class="mt-3"><em>No description available.</em></p>
  <% end %>

<% if @product.tags.any? %>
  <p class="mt-3"><strong>Tags:</strong>
    <%= @product.tags.map(&:name).join(", ") %>
  </p>
<% else %>
  <p class="mt-3"><em>No tags available.</em></p>
<% end %>

  <%= form_with url: cart_add_path, method: :post, local: true, class: "mt-4" do %>
    <%= hidden_field_tag :product_id, @product.id %>
    <%= hidden_field_tag :quantity, 1 %>
    <%= submit_tag "Add to Cart", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Back to Products", products_path, class: "btn btn-secondary mt-3" %>
</div>
