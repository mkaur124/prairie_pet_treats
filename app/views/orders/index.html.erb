<div class="container my-5">
  <h1 class="text-center mb-4" style="color: #ff8c69;">My Orders</h1>

  <% @orders.each do |order| %>
    <div class="card p-3 mb-4 shadow-sm">
      <h2>Order #<%= order.id %></h2>
      <p><strong>GST:</strong> <%= number_to_currency(order.gst) %>,
         <strong>PST:</strong> <%= number_to_currency(order.pst) %>,
         <strong>HST:</strong> <%= number_to_currency(order.hst) %></p>
      <p><strong>Grand Total:</strong> <%= number_to_currency(order.total) %></p>
      <%= link_to "View Details", order_path(order), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
